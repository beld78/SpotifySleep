<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondarylight"
    tools:context="yee.fma.spotifysleep.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="75dp"
            android:background="@drawable/backedge"
            android:gravity="center"
            android:text="@string/enter_songs"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="88dp"
            android:layout_height="85dp"
            android:contentDescription="arrow facing downwards"
            app:srcCompat="@drawable/ic_arrow_downward_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/back"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:text="3"
                android:textColor="@color/text"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonUp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_arrow_upward_black_24dp" />

                <Button
                    android:id="@+id/buttonDown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_arrow_downward_black_24dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/clickbg"
                android:text="@string/button"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonReset"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/clickbg"
                android:text="@string/buttonReset"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>